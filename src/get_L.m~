%Function to calculate the L matrix

function L = get_L()
    Cl = .5; %.4
    Cd = .5; %.4
    m = 52; %kg 
    l1 = .75; %meters
    l2 = .75; %meters

    A = [(Cl/2 - Cd)/m, Cl/(2*m), 0, Cl/m;
         -Cl/(2*m), -(Cl/2 + Cd)/m, 0, Cl/m;
         0, 0, 0, 0;
         0, 0, 1, 0];

    C = [1,0,0,0]


    
    Q = [C;C*A];
    rank(Q);
    
    p = [-0.3 -.6 -15 -14]; % Desired pole placement
    L = place(A',C',p) % using MATLAB place function to get K
    eig(A-L*C)
     

end

